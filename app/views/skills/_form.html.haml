.row
	.col-md-8
		= simple_form_for([@fighter, @fighter.skills.build]) do |f|

			- if @skill && @skill.errors.any?
				- @skill.errors.full_messages.each do |msg|
					%li= msg

			= f.input :name, label: 'Skill name:'
			= f.input :level, label: 'Skill level:', collection: 0..5
			= f.submit class: 'submit_btn'